{
  "name": "word-counter",
  "version": "0.1.0",
  "author": "Christo Oosthuizen",
  "private": true,
  "scripts": {
    "build-css": "node-sass src/ -o src/",
    "watch-css": "npm run build-css && node-sass src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm run build-css && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/co851002/word-counter.git"
  },
  "homepage": "http://co851002.github.io/word-counter",
  "keywords": [
    "react",
    "word-counter",
    "webpack",
    "cli",
    "babel",
    "es6",
    "sass",
    "eslint"
  ],
  "dependencies": {
    "bootstrap": "^3.3.7",
    "react": "^15.4.2",
    "react-bootstrap": "^0.30.8",
    "react-dom": "^15.4.2",
    "reset-css": "^2.2.0"
  },
  "devDependencies": {
    "gh-pages": "^0.12.0",
    "node-sass": "^4.5.1",
    "npm-run-all": "^4.0.2",
    "react-scripts": "0.9.5"
  },
  "browserlist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
